{
  "name": "@variablesoftware/vs-brand-utils",
  "version": "0.0.1",
  "description": "üõ°Ô∏èüß©üè∑Ô∏è Nominal (branded) TypeScript types & helpers for opaque types.",
  "keywords": [
    "typescript",
    "brand",
    "nominal",
    "opaque",
    "types",
    "utility",
    "branding"
  ],
  "author": {
    "name": "Rob Friedman",
    "email": "bunkcode@variablesoftware.com",
    "url": "https://github.com/variablesoftware"
  },
  "publishConfig": {
    "provenance": true
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/variablesoftware/ts-brand-utils.git"
  },
  "homepage": "https://github.com/variablesoftware/ts-brand-utils/tree/main/packages/vs-brand-utils#readme",
  "bugs": {
    "url": "https://github.com/variablesoftware/ts-brand-utils/issues"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/**",
    "src/index.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "type": "module",
  "lint-staged": {
    "**/*.{ts,js,mjs,cts}": "eslint --fix"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:release": "yarn build && yarn minify",
    "minify": "yarn terser --timings --compress --mangle --toplevel --source-map includeSources dist/src/index.js --output dist/src/index.min.js",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist && git tag -d $(git tag)",
    "dev": "vitest watch",
    "prepare": "husky install",
    "format": "yarn format:all",
    "format:all": "prettier --write --log-level error .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prettier:check": "prettier --check .",
    "publish:npm": "yarn npm publish --access public",
    "test": "vitest run",
    "test:build": "yarn clean && yarn build && yarn test",
    "upgrade:latest": "yarn set version stable && yarn upgrade-interactive",
    "version:patch": "yarn version patch",
    "version:minor": "yarn version minor",
    "version:major": "yarn version major",
    "semantic:release": "yarn dlx semantic-release",
    "semantic:release:dry": "yarn semantic:release --dry-run && yarn release",
    "release": "git push && git push --tags && yarn npm publish --access public"
  },
  "peerDependencies": {
    "typescript": "^4.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.2",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "terser": "^5.39.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "packageManager": "yarn@4.9.1"
}
